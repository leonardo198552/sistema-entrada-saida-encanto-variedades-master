{% extends "layout.njk" %}
{% block head %}
    <title>Comissão Vendedor</title>
    <link rel="stylesheet" href="/product.css"/>
{% endblock %}

{% block content %}
    <div class="content">
        <h4> Vendedor - {{nameSeller}}</h4>

         <form class="search" action="/sellerscommissionsdate/{{id}}" method="post">
            <div class="row">            
                <div class="col-md-6">
                    <label for="startDate" class="form-label">Data Inicial</label>
                    <input id="startDate" value="{{startDate}}" class="form-control" type="date" name="startDate" />
                </div>
                <div class="col-md-6">
                    <label for="finalDate" class="form-label">Data final</label>
                    <input id="finalDate" value="{{finalDate}}" class="form-control" type="date" name="finalDate" />
                    </div>
                <div class="col-md-6">
                    <button class="btn btn-primary bnt-exit" type="submit">Pesquisar</button>
                    {% if dateFilter != false %}
                        <a href="/sellerscommissions/{{id}}" class="btn btn-secondary">Limpar</a>
                    {% endif %}
                </div>
            </div>
        </form>
        <table class="table table-striped table-hover">
            <tr>    
                <th>Vendas</th>
                <th>Data</th>
                <th>Total em vendas: <br/>  {{ total }}</th>
                <th>Comissão: <br/>  {{ commission }}</th>
            </tr>
            {% for sale in sales %}
                <tr>
                    <td>{{ sale.sale.formattedTotal }}</td>
                    <td>{{ sale.formattedDate }}</td>
                </tr>
            {% endfor %}
        </table>

    </div>
